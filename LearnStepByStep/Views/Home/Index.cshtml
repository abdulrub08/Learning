@model IEnumerable<Employee>

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "PreImg-ARM TEMPLT.jpg");

    <div class="card m-3">
        <div class="card-header">
            <h3>@employee.Name</h3>
        </div>

        <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
        @*<img class="card-img-top" src="~/images/PreImg-ARM TEMPLT.jpg"  asp-append-version="true"  style="height:150px;"/>*@
        <div class="card-footer text-center">
            @*@Html.ActionLink("View", "details", new { id = employee.ID })
            <a href="/home/details/@employee.ID">View</a>
            @Url.Action("details", "home", new { id = employee.ID })*@
            <a asp-action="details" asp-controller="Home" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
            <a  asp-controller="home" asp-action="edit" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
            <a href="#" class="btn btn-danger">Delete</a>
        </div>
    </div>
    }
</div>